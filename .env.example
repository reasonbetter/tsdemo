# Copy to .env.local and fill values. NEVER commit real secrets.

# Postgres connection string (examples):
# - Neon:       postgresql://USER:PASSWORD@YOUR-NEON-HOST/YOUR_DB?sslmode=require
# - Local dev:  postgresql://postgres:postgres@localhost:5432/mydb?schema=public
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DB?sslmode=require

# OpenAI (server-side only)
OPENAI_API_KEY=

# Admin credentials for basic endpoints (do NOT use defaults in prod)
ADMIN_PASSWORD=
ADMIN_CLEAR_PASSWORD=

# Session backend: "db" (default) or "memory" for local dev only
# SESSION_BACKEND=db

